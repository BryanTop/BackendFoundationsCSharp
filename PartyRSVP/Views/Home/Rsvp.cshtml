@model PartyRSVP.Models.GuestResponse
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Party RSVP</title>
</head>
<body>
        <div class="col align-self-center">
            Welcome to the RSVP page!
        </div class="col align-self-center">
            <p>Please enter your information below</p>
        </div>
        <div class="row">
            <form asp-action="RsvpForm" method="post" class="form-group col-md-3 align-self-center">
                <p>
                    <label asp-for="FirstName">Your first name:</label>
                    <input asp-for="FirstName" class="form-control" />
                </p>
                <p>
                    <label asp-for="LastName">Your last name:</label>
                    <input asp-for="LastName" class="form-control" />
                </p>
                <p>
                    <label asp-for="Email">Your email:</label>
                    <input asp-for="Email" class="form-control" />
                </p>
                <p>
                    <label asp-for="Phone">Your phone:</label>
                    <input asp-for="Phone" class="form-control" /></p>
                <p>
                    <label>Will you attend?</label>
                    <select asp-for="WillAttend" class="form-control">
                        <option value="">Choose an option</option>
                        <option value="true">Yes, I'll be there</option>
                        <option value="false">No, I can't come</option>
                    </select>
                </p>
                <button type="submit">Submit RSVP</button>
            </form>
        </div>
    
    
</body>
</html>